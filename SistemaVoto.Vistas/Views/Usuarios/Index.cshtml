@model IEnumerable<SistemaVoto.Modelos.Usuario>
@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h2>👥 Usuarios del Sistema</h2>
    <a href="#" class="btn btn-primary">+ Nuevo Usuario</a>
</div>

<table>
    <thead>
        <tr>
            <th>Usuario</th>
            <th>Nombre Completo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-weight: bold;">@item.NombreUsuario</td>
                <td>@item.NombreCompleto</td>
                <td>
                    @if (item.Activo)
                    {
                        <span style="color: green;">● Activo</span>
                    }
                    else
                    {

                        <span style="color: red;">● Inactivo</span>
                    }
                </td>
                <td>
                    <button class="btn btn-primary" style="font-size: 0.8em;">Editar</button>
                    <button class="btn btn-danger" style="font-size: 0.8em;">Baja</button>
                </td>
            </tr>
        }
    </tbody>
</table>