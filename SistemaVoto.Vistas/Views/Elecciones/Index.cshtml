@model IEnumerable<SistemaVoto.Modelos.Eleccion>

@{
    ViewData["Title"] = "Calendario Electoral";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">📅 Gestión de Elecciones</h3>
        <div class="card-tools">
            <a href="#" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Nueva Elección
            </a>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 5%">ID</th>
                    <th style="width: 30%">Descripción</th>
                    <th style="width: 20%">Fecha de Inicio</th>
                    <th style="width: 15%">Estado</th>
                    <th style="width: 20%">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <a>@item.Descripcion</a>
                        </td>
                        <td>
                            @item.FechaInicio.ToShortDateString()
                        </td>
                        <td>
                            @if (item.Activo)
                            {
                                <span class="badge badge-success">En Curso</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Finalizada</span>
                            }
                        </td>
                        <td class="project-actions">
                            <a class="btn btn-info btn-sm" href="#">
                                <i class="fas fa-pencil-alt"></i> Editar
                            </a>
                            <a class="btn btn-danger btn-sm" href="#">
                                <i class="fas fa-trash"></i> Cerrar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>