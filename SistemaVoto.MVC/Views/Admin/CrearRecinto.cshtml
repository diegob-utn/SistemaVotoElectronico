@using SistemaVoto.Modelos
@using SistemaVoto.MVC.ViewModels
@model RecintoViewModel
@{
    ViewData["Title"] = "Crear Recinto";
    var ubicaciones = ViewBag.Ubicaciones as List<Ubicacion> ?? new List<Ubicacion>();
}

<div class="auth-container" style="max-width: 600px; margin: 2rem auto;">
    <div class="auth-card">
        <div class="auth-header">
            <a href="@Url.Action("Recintos")" class="auth-back-link">
                <i data-lucide="arrow-left" style="width: 16px; height: 16px;"></i> Volver
            </a>
            <h1 class="auth-title">
                <i data-lucide="building" style="width: 24px; height: 24px;"></i>
                Nuevo Recinto
            </h1>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-error">
                <i data-lucide="alert-circle" style="width: 20px; height: 20px;"></i>
                @Model.ErrorMessage
            </div>
        }

        <form asp-action="CrearRecinto" method="post" class="auth-form">
            <div class="form-group">
                <label asp-for="Nombre" class="form-label"></label>
                <div class="input-group">
                    <span class="input-icon"><i data-lucide="type"></i></span>
                    <input asp-for="Nombre" class="form-input" placeholder="Ej. Colegio Central" />
                </div>
                <span asp-validation-for="Nombre" class="text-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="form-label"></label>
                <div class="input-group">
                    <span class="input-icon"><i data-lucide="map-pin"></i></span>
                    <input asp-for="Direccion" class="form-input" placeholder="Ej. Av. Principal 123" />
                </div>
                <span asp-validation-for="Direccion" class="text-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="UbicacionId" class="form-label">Ubicación Geográfica (Opcional)</label>
                <div class="input-group">
                    <span class="input-icon"><i data-lucide="globe"></i></span>
                    <select asp-for="UbicacionId" class="form-input" style="appearance: auto;">
                        <option value="">-- Ninguna --</option>
                        @foreach (var u in ubicaciones)
                        {
                            <option value="@u.Id">@u.Nombre (@u.Tipo)</option>
                        }
                    </select>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
                <i data-lucide="save" style="width: 20px; height: 20px;"></i> Crear
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
