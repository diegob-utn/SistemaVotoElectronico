@model List<CandidatoDto>
@{
    ViewData["Title"] = "Candidatos";
    var eleccionId = ViewBag.EleccionId as int?;
}

<div class="candidatos-container">
    <!-- Header -->
    <div class="page-header">
        <div>
            <h1>
                <i data-lucide="users" style="width: 32px; height: 32px;"></i>
                Gestion de Candidatos
            </h1>
            <p class="text-muted">Administre los candidatos de las elecciones</p>
        </div>
        <a href="/Admin/CrearCandidato@(eleccionId.HasValue ? $"?eleccionId={eleccionId}" : "")" class="btn btn-primary">
            <i data-lucide="user-plus" style="width: 18px; height: 18px;"></i>
            Nuevo Candidato
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i data-lucide="check-circle" style="width: 20px; height: 20px;"></i>
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            <i data-lucide="alert-circle" style="width: 20px; height: 20px;"></i>
            @TempData["Error"]
        </div>
    }

    <!-- Candidates Grid -->
    <div class="candidates-grid">
        @if (Model.Any())
        {
            @foreach (var candidato in Model)
            {
                <div class="candidate-card glass-card">
                    <div class="candidate-avatar">
                        @if (!string.IsNullOrEmpty(candidato.FotoUrl))
                        {
                            <img src="@candidato.FotoUrl" alt="@candidato.Nombre" />
                        }
                        else
                        {
                            <span>@candidato.Nombre.Substring(0, 1).ToUpper()</span>
                        }
                    </div>
                    <div class="candidate-info">
                        <h3>@candidato.Nombre</h3>
                        <p class="candidate-party">@(candidato.PartidoPolitico ?? "Sin partido")</p>
                        <p class="candidate-election text-muted">@(candidato.EleccionTitulo ?? $"Eleccion #{candidato.EleccionId}")</p>
                    </div>
                    <div class="candidate-actions">
                        <form asp-action="EliminarCandidato" method="post" 
                              onsubmit="return confirm('Â¿Seguro que desea eliminar este candidato?')">
                            <input type="hidden" name="id" value="@candidato.Id" />
                            <input type="hidden" name="eleccionId" value="@eleccionId" />
                            <button type="submit" class="btn btn-ghost btn-sm" title="Eliminar">
                                <i data-lucide="trash-2" style="width: 16px; height: 16px; color: var(--color-error);"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state glass-card">
                <i data-lucide="users" style="width: 64px; height: 64px; opacity: 0.3;"></i>
                <h3>No hay candidatos registrados</h3>
                <p class="text-muted">Comience agregando candidatos a las elecciones</p>
                <a href="/Admin/CrearCandidato" class="btn btn-primary">
                    <i data-lucide="user-plus" style="width: 18px; height: 18px;"></i>
                    Agregar Candidato
                </a>
            </div>
        }
    </div>
</div>

<style>
    .candidatos-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    
    .page-header h1 {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
    }
    
    .candidates-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
    }
    
    .candidate-card {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
    }
    
    .candidate-avatar {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: var(--accent);
        color: #0D1017;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        overflow: hidden;
    }
    
    .candidate-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .candidate-info h3 {
        margin: 0 0 0.25rem;
        font-size: 1.1rem;
    }
    
    .candidate-party {
        color: var(--accent);
        font-weight: 500;
        margin: 0;
    }
    
    .candidate-election {
        font-size: 0.85rem;
        margin: 0.5rem 0 0;
    }
    
    .candidate-actions {
        position: absolute;
        top: 1rem;
        right: 1rem;
    }
    
    .empty-state {
        grid-column: 1 / -1;
        padding: 3rem;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    
    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            gap: 1rem;
            text-align: center;
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            lucide.createIcons();
        });
    </script>
}
