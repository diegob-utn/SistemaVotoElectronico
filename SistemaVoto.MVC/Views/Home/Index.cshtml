@{
    ViewData["Title"] = "Inicio";
}

<div class="landing-container">
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">
                <span class="text-accent">Voto</span> Electrónico
            </h1>
            <p class="hero-subtitle">
                Plataforma de votación segura, transparente y verificable mediante criptografía y blockchain.
            </p>
            <div class="hero-actions">
                <a href="/Auth/Login" class="btn btn-primary btn-lg">
                    Iniciar Sesión
                    <i data-lucide="arrow-right" style="width: 20px; height: 20px;"></i>
                </a>
               <!-- <a href="/Auth/Register" class="btn btn-outline btn-lg">Registrarse</a> -->
            </div>
        </div>
        <div class="hero-visual">
            <div class="glass-card visual-card">
                <i data-lucide="shield-check" style="width: 64px; height: 64px; color: var(--color-success);"></i>
                <h3>Seguridad</h3>
                <p>Cifrado de extremo a extremo</p>
            </div>
             <div class="glass-card visual-card" style="margin-top: 2rem; margin-left: -2rem;">
                <i data-lucide="bar-chart-2" style="width: 64px; height: 64px; color: var(--color-info);"></i>
                <h3>Transparencia</h3>
                <p>Resultados en tiempo real</p>
            </div>
        </div>
    </div>
</div>

<style>
    .landing-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 80vh;
    }

    .hero-section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
        max-width: 1200px;
        width: 100%;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 1.5rem;
        line-height: 1.1;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        margin-bottom: 2.5rem;
        max-width: 500px;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
    }

    .visual-card {
        padding: 2rem;
        text-align: center;
        width: 200px;
    }
    
    .visual-card h3 {
        margin-top: 1rem;
        font-size: 1.25rem;
    }
    
    .visual-card p {
        font-size: 0.9rem;
        margin: 0;
    }

    @@media (max-width: 968px) {
        .hero-section {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 3rem;
        }
        
        .hero-subtitle {
            margin: 0 auto 2.5rem;
        }
        
        .hero-actions {
            justify-content: center;
        }
        
        .hero-visual {
            display: flex;
            justify-content: center;
            gap: 1rem;
        }
        
        .visual-card {
            margin: 0 !important;
        }
    }
</style>
